{
  "info": {
    "name": "4. Staff Management",
    "description": "API endpoints for managing staff",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Staff (Public)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/staff",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "staff"]
        },
        "description": "Get all staff (accessible by any authenticated user)"
      }
    },
    {
      "name": "Get Staff by ID (Public)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/staff/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "staff", "1"]
        },
        "description": "Get staff details by ID (accessible by any authenticated user)"
      }
    },
    {
      "name": "Create Staff (Admin Only)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"พนักงานใหม่\",\n    \"email\": \"staff@example.com\",\n    \"username\": \"staff1\",\n    \"password\": \"password\",\n    \"position\": \"พนักงานประจำ\",\n    \"phone\": \"0811111111\",\n    \"station_id\": 1\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/staff",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "staff"]
        },
        "description": "Create a new staff member (requires admin role)"
      }
    },
    {
      "name": "Update Staff (Admin Only)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"พนักงานที่อัพเดท\",\n    \"email\": \"updatedstaff@example.com\",\n    \"position\": \"ผู้จัดการ\",\n    \"phone\": \"0822222222\",\n    \"station_id\": 2\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/staff/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "staff", "1"]
        },
        "description": "Update an existing staff member (requires admin role)"
      }
    },
    {
      "name": "Delete Staff (Admin Only)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/staff/2",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "staff", "2"]
        },
        "description": "Delete a staff member (requires admin role)"
      }
    }
  ]
}
