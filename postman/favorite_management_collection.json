{
  "info": {
    "name": "8. Favorite Management",
    "description": "API endpoints for managing favorites",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Favorites (Owner or Admin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/favorites",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "favorites"]
        },
        "description": "Get all favorites for the current user (or all if admin)"
      }
    },
    {
      "name": "Get Admin All Favorites",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/favorites",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "favorites"]
        },
        "description": "Get all favorites as admin (shows favorites for all users)"
      }
    },
    {
      "name": "Create Favorite (All users)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"route_id\": 1\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/favorites",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "favorites"]
        },
        "description": "Create a new favorite for the current user"
      }
    },
    {
      "name": "Delete Favorite (Owner or Admin)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/favorites/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "favorites", "1"]
        },
        "description": "Delete a favorite (must be owner or admin)"
      }
    },
    {
      "name": "Delete Favorite as Admin",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/favorites/2",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "favorites", "2"]
        },
        "description": "Delete any favorite as admin"
      }
    }
  ]
}
