{
  "info": {
    "name": "3. Route Management",
    "description": "API endpoints for managing routes",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Routes (Public)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/routes",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "routes"]
        },
        "description": "Get all routes (accessible by any authenticated user)"
      }
    },
    {
      "name": "Get Route by ID (Public)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/routes/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "routes", "1"]
        },
        "description": "Get route details by ID (accessible by any authenticated user)"
      }
    },
    {
      "name": "Create Route (Admin Only)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"start_station_id\": 1,\n    \"end_station_id\": 2,\n    \"distance\": 5,\n    \"duration\": \"20 min\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/routes",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "routes"]
        },
        "description": "Create a new route (requires admin role)"
      }
    },
    {
      "name": "Update Route (Admin Only)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"start_station_id\": 1,\n    \"end_station_id\": 2,\n    \"distance\": 5.5,\n    \"duration\": \"22 min\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/routes/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "routes", "1"]
        },
        "description": "Update an existing route (requires admin role)"
      }
    },
    {
      "name": "Delete Route (Admin Only)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/routes/3",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "routes", "3"]
        },
        "description": "Delete a route (requires admin role)"
      }
    }
  ]
}
