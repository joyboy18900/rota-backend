{
  "info": {
    "name": "6. Schedule Management",
    "description": "API endpoints for managing schedules",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Schedules (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/v1/schedules",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "schedules"]
        },
        "description": "Get all schedules (public endpoint, no authentication required)"
      }
    },
    {
      "name": "Get Schedule by ID (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/v1/schedules/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "schedules", "1"]
        },
        "description": "Get schedule details by ID (public endpoint, no authentication required)"
      }
    },
    {
      "name": "Create Schedule (Admin Only)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"route_id\": 1,\n    \"vehicle_id\": 1,\n    \"departure_time\": \"08:00\",\n    \"arrival_time\": \"08:20\",\n    \"days_of_week\": [\"Monday\", \"Tuesday\", \"Wednesday\", \"Thursday\", \"Friday\"],\n    \"is_active\": true\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/schedules",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "schedules"]
        },
        "description": "Create a new schedule (requires admin role)"
      }
    },
    {
      "name": "Update Schedule (Admin Only)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"route_id\": 1,\n    \"vehicle_id\": 1,\n    \"departure_time\": \"08:30\",\n    \"arrival_time\": \"08:50\",\n    \"days_of_week\": [\"Monday\", \"Tuesday\", \"Wednesday\", \"Thursday\", \"Friday\"],\n    \"is_active\": true\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/schedules/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "schedules", "1"]
        },
        "description": "Update an existing schedule (requires admin role)"
      }
    },
    {
      "name": "Delete Schedule (Admin Only)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/schedules/2",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "schedules", "2"]
        },
        "description": "Delete a schedule (requires admin role)"
      }
    }
  ]
}
