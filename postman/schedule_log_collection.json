{
  "info": {
    "name": "7. Schedule Log Management",
    "description": "API endpoints for managing schedule logs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Schedule Logs (Public)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/schedule-logs",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "schedule-logs"]
        },
        "description": "Get all schedule logs (accessible by any authenticated user)"
      }
    },
    {
      "name": "Get Schedule Log by ID (Public)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/schedule-logs/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "schedule-logs", "1"]
        },
        "description": "Get schedule log details by ID (accessible by any authenticated user)"
      }
    },
    {
      "name": "Create Schedule Log (Admin Only)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"schedule_id\": 1,\n    \"actual_departure_time\": \"08:05\",\n    \"actual_arrival_time\": \"08:25\",\n    \"notes\": \"รถออกช้า 5 นาที\",\n    \"status\": \"completed\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/schedule-logs",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "schedule-logs"]
        },
        "description": "Create a new schedule log (requires admin role)"
      }
    }
  ]
}
