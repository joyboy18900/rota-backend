{
  "info": {
    "name": "2. Station Management",
    "description": "API endpoints for managing stations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get All Stations (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/v1/stations",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "stations"]
        },
        "description": "Get all stations (accessible by any authenticated user)"
      }
    },
    {
      "name": "Get Station by ID (Public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/v1/stations/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "stations", "1"]
        },
        "description": "Get station details by ID (accessible by any authenticated user)"
      }
    },
    {
      "name": "Create Station (Admin Only)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"สถานีใหม่\",\n    \"location\": \"ที่อยู่สถานีใหม่\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/stations",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "stations"]
        },
        "description": "Create a new station (requires admin role)"
      }
    },
    {
      "name": "Update Station (Admin Only)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"สถานีที่อัพเดท\",\n    \"location\": \"ที่อยู่ที่อัพเดท\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/stations/1",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "stations", "1"]
        },
        "description": "Update an existing station (requires admin role)"
      }
    },
    {
      "name": "Delete Station (Admin Only)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8000/api/v1/stations/2",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "stations", "2"]
        },
        "description": "Delete a station (requires admin role)"
      }
    },
    {
      "name": "Try Create Station (User - Should Fail)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{user_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"สถานีใหม่\",\n    \"location\": \"ที่อยู่สถานีใหม่\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/v1/stations",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "v1", "stations"]
        },
        "description": "Test permission restriction - regular users should not be able to create stations"
      }
    }
  ]
}
